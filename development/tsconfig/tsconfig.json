{
  "compilerOptions": {
    "allowJs": true,
    "allowImportExportEverywhere": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "sourceMap": false,
    "sourceType": "module",
    "strict": true,
    "target": "es2015"
  }
}
